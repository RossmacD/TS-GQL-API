{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "preserve",
    "paths": {
        "*": [
            "node_modules/*"
        ]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"],
  "files": ["./index.d.ts"]
}
